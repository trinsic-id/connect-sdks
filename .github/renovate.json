{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "mewmba/renovate/",
  "gitAuthor": "mewmba Renovate Bot <mewmba@trinsic.id>",
  "repositories": ["trinsic-id/sdk"],
  "prHourlyLimit": 0,
  "recreateWhen": "always",
  "includePaths": [
    ".github/renovate.json",
    "api-csharp/samples/Sample/**",
    "api-go/samples/**",
    "api-java/samples/**",
    "api-php/samples/**",
    "api-python/samples/**",
    "api-php/samples/**",
    "api-ruby/samples/**",
    "api-typescript/samples/**",
    "ui-web/samples/**"
  ],
  "ignoreDeps": [
    "vite",
    "express",
    "@types/node",
    "nodemon",
    "ts-node",
    "ts-node-dev",
    "typescript",
    "dotenv",
    "httparty",
    "sinatra",
    "sinatra-contrib",
    "rack",
    "rack-test",
    "minitest",
    "slim/slim",
    "slim/psr7",
    "vlucas/phpdotenv",
    "io.javalin:javalin",
    "org.slf4j:slf4j-simple",
    "io.github.cdimascio:dotenv-java",
    "github.com/gofiber/fiber/v2",
    "github.com/joho/godotenv",
    "DotNetEnv"
  ],
  "npm": {
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Update npm workspace dependencies and lockfile at root",
      "matchPaths": ["ui-web/samples/**", "api-typescript/samples/**"],
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["*"],
      "updateTypes": ["minor", "patch"],
      "commitMessage": "chore(deps): update workspace dependencies in ui-web/samples and api-typescript/samples",
      "depTypeList": ["dependencies", "devDependencies"],
      "prPriority": 1,
      "recreateWhen": "always"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 6am on the first day of the month"]
  }
}
